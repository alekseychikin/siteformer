<param name={$name} value="" />
<param name={$id} value={"checkbox" ++ num_int(num_rand() * 1000)} />
<param name={$checked} value={false} />
<param name={$role} value="" />
<param name={$index} value={-1} />

<input
	class="form__checkbox"
	type="checkbox"
	name={$name}
	id={$id}
	checked={$checked}
	data-role={$role}
	data-index={$index}
>
	<if test={$index != -1}>
		<attribute name="data-index" value={$index} />
	</if>
</input>
<label class="form__checkbox-label" for={$id}></label>
