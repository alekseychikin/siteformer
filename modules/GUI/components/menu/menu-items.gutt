<component>
  <param name={$collections} value={[]} />

  <for-each item={$collections-item} from={$collections}>
    <li class="menu__item">
      <if test={$collection == $collections-item.alias}>
        <attribute name="class" value="menu__item menu__item--active" />
      </if>

      <a href={"/cms/" ++ $collections-item.alias ++ "/"} class="menu__link">{ $collections-item.title }</a>
    </li>
  </for-each>
</component>
