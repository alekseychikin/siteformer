<div class="form__inp-contain" role="input-contain">
  <div class="form__file-wrap">
    { if (!!filename?) }
    <span class="form__file-close" role="remove"></span>
    { endif }
    <label class="form__file{ if (!!filename?) } form__file--choosen{ endif }">
      { if (!!filename?) }
        <span class="form__file-filename">{ filename }</span>
      { endif }
      <input type="file" name="{ field['alias'] }" id="{ field['alias'] }" value="" role="image" />
    </label>
  </div>
</div>
