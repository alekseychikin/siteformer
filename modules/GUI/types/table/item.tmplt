<div class="form__inp-contain" data-role="input-contain">
  <table class="table">
    { if (data) }
      { for (rowIndex, row, data) }
        <tr>
        { for (columnIndex, column, row) }
          <td>
            <input
              class="form__inp"
              type="text"
              id="{ field.alias }{ rowIndex }_{ columnIndex }"
              data-role="cell"
              value="{ column }"
              data-row="{ rowIndex }"
              data-column="{ columnIndex }"
            />
          </td>
        { endfor }
        </tr>
      { endfor }
    { else }
      { for (rowIndex, row, field.settings.defaultData) }
        <tr>
        { for (columnIndex, column, row) }
          <td>
            <input
              class="form__inp"
              type="text"
              id="{ field.alias }{ rowIndex }_{ columnIndex }"
              data-role="cell"
              value=""
              data-row="{ rowIndex }"
              data-column="{ columnIndex }"
            />
          </td>
        { endfor }
        </tr>
      { endfor }
    { endif }
  </table>
</div>
